.container{
  display: flex;
  flex-direction: column;
}

.top {
  width: 100%;
  height: 180px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: linear-gradient(#1296db, #00ffb5);
}

.top image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.top text {
  color: white;
  margin-top: 30rpx;
}
.mid{
  margin-top: 30rpx;
}

.item {
  background-color: #f5f5f5;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom:6rpx;
}

.item image {
  width: 40rpx;
  height: 40rpx;
  margin-right: 30rpx;
}
.item text{
  color: #333;
  margin-left: 30rpx;
  font-size: 36rpx
}
.login{
  margin-top: 100rpx;
  width: 60%;
  height: 80rpx;
  color: #F74227;
  background-color: #F8F8F8;
  line-height: 80rpx;
  border-radius: 30rpx;
  border: 1rpx solid #F74227;
  font-size: 33rpx;
}