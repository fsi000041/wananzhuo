/* pages/home/home.wxss */

.title_item {
  justify-content: space-between;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 30rpx;
  background: white;
  display: flex;
  flex-direction: column;
  height: 240rpx;
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 5rpx 5rpx 12px #ccc;
  margin-bottom: 20rpx;
}
.slide-image{
  width: 100vw;
}
/* 作者 */

.title_name {
  font-size: 36rpx;
  color: #8b8b8b;
}

/* 时间 */

.title_time {
  font-size: 36rpx;
  color: #8b8b8b;
}

/* 标题 */

.title_info {
  font-size: 38rpx;
  font-weight: 480;
  margin-top: 30rpx;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.title_top {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.title_bottom {
  margin-top: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.title_bottom text {
  color: #1296db;
  font-size: 36rpx;
}

.title_bottom image {
  width: 50rpx;
  height: 50rpx;
}
